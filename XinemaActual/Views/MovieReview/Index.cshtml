@model IEnumerable<XinemaActual.Models.MovieReview>

@{
    ViewBag.Title = "Movie Review";
}
<ul class="breadcrumb breadcrumb__t">Movie Review</ul>

<div class="container">
    <p class="top-box">

        <table>
            <tr>
                <td><img class="inline" src="@Url.Action("IMDBChart")" /></td>
                <td><img class="inline" src="@Url.Action("RTChart")" /></td>
            </tr>
        </table>
        @foreach (var item in Model)
        {
            <div class="col-sm-6 col-md-6">
                <div class="thumbnail">

                    <div class="caption">
                        @Html.ActionLink(item.movieReviewName, "Details", new { id = item.movieReviewID }, new { @class = "h3" })

                    </div>
                </div>
            </div>
        }
</div>
    <div class="clear"></div>
</div>
   