@model IEnumerable<XinemaActual.Models.Showtime>

@{
    ViewBag.Title = "All Showtimes";

}

<div class="clear"></div>
<div class="container">
    <h2 class="head">Golden Village</h2>
    <div class="top-box">
        @foreach (var item in Model.Where(item => item.showtimeCinemaName.Contains("Golden Village")))
        {


            <div class="col-sm-6 col-md-6">
                <div class="thumbnail">
                    <div class="caption">
                        <h3>@Html.DisplayFor(modelItem => item.showtimeTitle)</h3>
                        <h4>@Html.DisplayFor(modelItem => item.showtimeCinemaName)</h4>
                        <h5>@Html.DisplayFor(modelItem => item.showtimeDate)</h5>
                        <h5>@Html.DisplayFor(modelItem => item.showtimeStartTime)</h5>
                    </div>
                </div>
            </div>

        }
    </div>
