@model IEnumerable<XinemaActual.Models.ShowTime>

@{
    ViewBag.Title = "All Showtimes";

}
<div class="pull-right">
    @Html.Label("Sort by Cinemas")
    @Html.DropDownList("CinemaDropDownListItems", null, new { onchange = "document.location.href='/Showtimes/Index?cID='+this.value;" })
</div>
<div class="pull-right">
    @Html.Label("Sort by Movies")
    @Html.DropDownList("MovieDropDownListItems", null, new { onchange = "document.location.href='/Showtimes/Index?mID='+this.value;" })
</div>
<div class="pull-left">
    @Html.Label("Sort by Date")
    @Html.DropDownList("DateDropDownListItems", null, new { onchange = "document.location.href='/Showtimes/Index?dID='+this.value;" })
</div>
<div class="clear"></div>
<div class="container">
    <h2 class="head">Golden Village</h2>
    <div class="top-box">
        @foreach (var item in Model.Where(item => item.showtimeCinemaName.Contains("Golden Village")))
        {


            <div class="col-md-4">
                <div style="height: 200px;" class="thumbnail">
                    <h3>@Html.DisplayFor(modelItem => item.showtimeCinemaName)</h3>
                    <h4>@Html.DisplayFor(modelItem => item.showtimeTitle)</h4>

                    <pre>@Html.DisplayFor(modelItem => item.showtimeStartTime)</pre>

                </div>
            </div>

        }
    </div>

