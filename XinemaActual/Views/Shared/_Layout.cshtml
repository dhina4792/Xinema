<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link href="~/Content/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Content/form.css" rel="stylesheet" type="text/css" media="all" />
    <link href='http://fonts.googleapis.com/css?family=Exo+2' rel='stylesheet' type='text/css'>
    <script type="text/javascript" src="~/Scripts/jquery1.min.js"></script>
    <!-- start menu -->
    <link href="~/Content/megamenu.css" rel="stylesheet" type="text/css" media="all" />
    <script type="text/javascript" src="~/Scripts/megamenu.js"></script>
    <script>$(document).ready(function(){$(".megamenu").megamenu();});</script>
    <!--start slider -->
    <link rel="stylesheet" href="~/Content/fwslider.css" media="all">
    <script src="~/Scripts/jquery-ui.min.js"></script>
    <script src="~/Scripts/css3-mediaqueries.js"></script>
    <script src="~/Scripts/fwslider.js"></script>
    <!--end slider -->
    <script src="~/Scripts/jquery.easydropdown.js"></script>

    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="header-bottom">
        <div class="wrap">
            <div class="header-bottom-left">
                <div class="logo">
                    <img src="~/images/logo.png" alt="" /></a>
                </div>
                <div class="menu">
                    <ul class="megamenu skyblue">
                        <li class="active grid">@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Movies","Index","Movies")</li>
                        <li>@Html.ActionLink("Cinemas", "Index", "Cinemas")</li>
                        <li>@Html.ActionLink("Showtimes", "Index", "Showtimes")</li>
                        <li>@Html.ActionLink("Movie Review", "Index", "MovieReview")</li>
                    </ul>
                </div>
            </div>
            <div class="clear"></div>
        </div>
    </div>

    <!--/slider -->
    <div class="container body-content">
        
        <hr />

    </div>
    @RenderBody()
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
